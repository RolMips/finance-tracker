<% if !stocks.empty? %>
  <table class="table table-striped table-bordered table-hover m-2">
    <thead class="table-secondary">
      <tr>
        <th scope="col">Ticker</th>
        <th scope="col">Company name</th>
        <th scope="col">Company country</th>
        <th scope="col">Last price</th>
        <th scope="col">Price update</th>
        <th scope="col">Exchange place</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% stocks.each do |stock| %>
        <tr id="user_stock_<%= stock.id %>">
          <td><%= stock.ticker %></td>
          <td><%= stock.name %></td>
          <td><%= stock.company_country %></td>
          <td><%= "#{stock.last_price} #{stock.last_price_currency}" if stock.last_price %></td>
          <td><%= time_ago_in_words(stock.updated_at) %></td>
          <td><%= stock.exchange_place %></td>
          <td>
            <%= link_to( "<i class='fa fa-refresh'></i>".html_safe, user_stock_path(stock),
                        data: {  turbo_method: :patch },
                        class: 'btn btn-primary btn-sm') %>
            <%= link_to( "<i class='fa fa-trash'></i>".html_safe, user_stock_path(stock),
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                        class: 'btn btn-danger btn-sm') %>
          </td>
        </id=>
      <% end %>
    </tbody>
  </table>
<% end %>
