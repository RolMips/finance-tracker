<h1>My portfolio</h1>
<h3 class="p-2">Search stock</h3>
<div class="row">
  <div class="col-sm-2">
    <%= form_tag search_stock_path, data: {turbo_stream: true}, remote: true, method: :get do %>
      <div class="input-group m-2">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', class: "form-control" %>
        <%= button_tag type: :submit, class: "btn btn-primary" do %>
          <i class="fa fa-search"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4" id="api_result">
  </div>
</div>
